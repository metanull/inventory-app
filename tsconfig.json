{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./resources/*"]
    },
    "types": [
      "vite/client",
      "node"
    ],
    "strict": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "env.d.ts",
    "resources/**/*"
  ],
  "exclude": [
    "node_modules",
    "vendor",
    "storage",
    "bootstrap/cache",
    "spa"
  ]
}
