{
    "name": "inventory-app",
    "version": "6.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite --host 127.0.0.1",
        "preview": "vite preview",
        "build:spa": "cd spa && npm run build",
        "dev:spa": "cd spa && npm run dev",
        "build:all": "npm run build && npm run build:spa",
        "dev:all": "concurrently \"npm run dev\" \"npm run dev:spa\"",
        "test": "npm --prefix ./spa run test",
        "test:unit": "npm --prefix ./spa run test:unit",
        "test:watch": "npm --prefix ./spa run test:watch",
        "test:ui": "npm --prefix ./spa run test:ui",
        "lint": "eslint spa/src --fix",
        "lint:check": "eslint spa/src",
        "format": "prettier --write spa/src --log-level warn",
        "format:check": "prettier --check spa/src/",
        "type-check": "npm --prefix ./spa run type-check",
        "quality-check": "npm --prefix ./spa run quality-check",
        "quality-check:report": "powershell -ExecutionPolicy Bypass -File ./scripts/Check-Issues.ps1",
        "scan:tailwind-colors": "node ./scripts/scan-tailwind-colors.js",
        "test:yml": "node ./scripts/validate-workflows.cjs"
    },
    "dependencies": {
        "glob": "^11.0.3"
    },
    "devDependencies": {
        "@openapitools/openapi-generator-cli": "^2.25.0",
        "@tailwindcss/postcss": "^4.1.16",
        "@tailwindcss/upgrade": "^4.1.16",
        "@types/node": "^24.9.1",
        "autoprefixer": "^10.4.19",
        "concurrently": "^9.2.0",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.2.1",
        "form-data": "^4.0.3",
        "laravel-vite-plugin": "^2.0.0",
        "postcss": "^8.4.38",
        "prettier": "^3.4.2",
        "stylelint": "^16.25.0",
        "stylelint-config-standard": "^39.0.0",
        "tailwindcss": "^4.1.16",
        "vite": "^7.1.12"
    },
    "engines": {
        "node": ">=22.17.0",
        "npm": ">=10.9.2"
    }
}
