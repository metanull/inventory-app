{
    "name": "inventory-app",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vue-tsc --noEmit && vite build",
        "dev": "vite --host 127.0.0.1",
        "preview": "vite preview",
        "test": "vitest run --exclude='**/*.integration.test.ts' --reporter=dot",
        "test:unit": "vitest run --exclude='**/*.integration.test.ts' --reporter=dot",
        "test:unit:watch": "vitest --exclude='**/*.integration.test.ts'",
        "test:integration": "vitest run --config vitest.integration.config.ts --reporter=dot",
        "test:integration:watch": "vitest --config vitest.integration.config.ts",
        "test:all": "vitest run --reporter=dot",
        "test:coverage": "vitest run --coverage --exclude='**/*.integration.test.ts' --reporter=dot",
        "test:watch": "vitest --exclude='**/*.integration.test.ts'",
        "test:ui": "vitest --ui --exclude='**/*.integration.test.ts'",
        "lint": "eslint . --fix",
        "lint:check": "eslint .",
        "format": "prettier --write resources/js/ --log-level warn",
        "format:check": "prettier --check resources/js/",
        "type-check": "vue-tsc --noEmit",
        "quality-check": "npm run type-check && npm run lint:check && npm run format:check && npm run test",
        "quality-check:fix": "npm run lint && npm run format",
        "quality-check:report": "powershell -ExecutionPolicy Bypass -File ./scripts/Check-Issues.ps1"
    },
    "dependencies": {
        "@headlessui/vue": "^1.7.23",
        "@heroicons/vue": "^2.2.0",
        "@types/uuid": "^10.0.0",
        "@vueuse/core": "^13.4.0",
        "axios": "^1.11.0",
        "pinia": "^3.0.3",
        "uuid": "^11.1.0",
        "vue": "^3.5.14",
        "vue-router": "^4.5.0"
    },
    "devDependencies": {
        "@openapitools/openapi-generator-cli": "^2.23.1",
        "@pinia/testing": "^1.0.2",
        "@types/form-data": "^2.2.1",
        "@types/node": "^24.0.8",
        "@typescript-eslint/eslint-plugin": "^8.17.0",
        "@typescript-eslint/parser": "^8.17.0",
        "@vitejs/plugin-vue": "^6.0.1",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "@vue/test-utils": "^2.4.6",
        "@vue/tsconfig": "^0.7.0",
        "autoprefixer": "^10.4.21",
        "concurrently": "^9.2.0",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-vue": "^10.2.0",
        "form-data": "^4.0.3",
        "jsdom": "^26.1.0",
        "laravel-vite-plugin": "^2.0.0",
        "postcss": "^8.5.6",
        "prettier": "^3.4.2",
        "stylelint": "^16.21.1",
        "stylelint-config-standard": "^38.0.0",
        "tailwindcss": "^3.4.17",
        "typescript": "~5.8.3",
        "vite": "^7.0.4",
        "vitest": "^3.2.4",
        "vue-tsc": "^3.0.1"
    },
    "engines": {
        "node": ">=22.17.0",
        "npm": ">=10.9.2"
    }
}
